@import 'jeet/index'
@import '_variables'

global-reset()

.container
  center(960px)
.two
  column(1/2)
.third
  column(1/3)
.fourth
  comumn(1/4)


body
  background url('../../assets/img/bg.jpg') 0 0 no-repeat
  background-size cover
  font-family 'Cousine'
h1 
  color orange
  font-size 3em
p
  color ice

.title
  p
    color gray

.generator
  position fixed
  top 0
  right 0
  height 100%
  background dark
  padding 20px

button
  border none
  background blue
  color ice
  padding 10px 20px
  cursor pointer
  font-weight bold
  font-size .8em
  &:hover
    background ice
    color blue

.boxFrase
  margin 20px 0
  .texto
    max-height 300px
    overflow-x auto
    margin 20px 0
    p
      margin-bottom 10px
  select
    height 35px
    background blue
    border none
    padding 0 5px 0 10px
    color ice 
    cursor pointer
    &:hover
      background ice
      color blue
    